<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/email32"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_email"
            android:hint="邮箱"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.93" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal|center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lock32"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_password"
            android:layout_marginLeft="10dp"
            android:hint="密码"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:id="@+id/tv_findPassword"
            android:text="忘记密码"

            android:textColor="@color/adapteritem_name_color"
            android:layout_alignParentLeft="true"
            android:textSize="16dp"
            android:layout_marginBottom="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/btn_findpas_sendemail"
            android:id="@+id/tv_changePassword"
            android:text="更改密码"
            android:layout_marginBottom="15dp"
            android:textSize="16dp"
            android:textColor="@color/adapteritem_name_color"
            />
    </RelativeLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_btn"
        android:text="  登录  "
        android:textColor="@color/g_dark_grey"
        android:layout_gravity="center"
        android:textSize="26dp"
        />


</LinearLayout>