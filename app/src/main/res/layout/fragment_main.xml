<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_mainfragment"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="4dp"
                android:background="#00000000"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                android:weightSum="1">
                <EditText
                    android:editable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_search_to_fragment_search"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/search_border"
                    android:ems="10"
                    android:hint="搜兼职，找工作"/>
            </android.support.v7.widget.Toolbar>
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="150dp" >
            </com.youth.banner.Banner>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp">
            <Button
                android:id="@+id/btn_mainpage_nearby"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="附件兼职"
                android:textSize="12dp"
                android:textColor="@color/gray_8f"
                android:drawableTop="@drawable/mainpage_nearby16"
                android:background="#00000000"
                android:layout_weight="0.22"
                />
            <View
                android:id="@+id/vl_mainpage1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_8f"
                android:layout_gravity="center_horizontal"
                />

            <Button
                android:id="@+id/btn_mainpage_new"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="最新兼职"
                android:drawableTop="@drawable/mainpage_stu16"
                android:textSize="12dp"
                android:textColor="@color/gray_8f"
                android:background="#00000000"
                android:layout_weight="0.22" />
            <View
                android:id="@+id/vl_mainpage2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_8f"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:id="@+id/btn_mainpage_stu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="学生兼职"
                android:textSize="12dp"
                android:textColor="@color/gray_8f"
                android:drawableTop="@drawable/mainpage_week16"
                android:background="#00000000"
                android:layout_weight="0.22" />
            <View
                android:id="@+id/vl_mainpage3"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_8f"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:id="@+id/btn_mainpage_week"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="周末兼职"
                android:textSize="12dp"
                android:textColor="@color/gray_8f"
                android:drawableTop="@drawable/mainpage_new16"
                android:background="#00000000"
                android:layout_weight="0.22" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/fmain_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</ScrollView>
