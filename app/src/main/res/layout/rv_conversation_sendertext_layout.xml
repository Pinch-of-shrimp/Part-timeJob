<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_send_msg_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:text="2017-6-29 06:06:06"
        android:textSize="12sp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="right"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_send_item"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/right_frage"
            android:gravity="center_vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/from_person_avator02"
            android:layout_width="40dp"
            android:src="@drawable/secondphoto"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/tv_send_item"
            android:background="@color/white" />
        </LinearLayout>

</LinearLayout>